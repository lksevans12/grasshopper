<div class = "container">
	<div class = "user-profile">

		<% if @user.id == current_user.id %>
		<div class = "col-lg-12 text-center">
			<h1 class = "welcome-user">Hi, <%= @user.first_name %>!</h1>


		</div>

		<% else %>

		<div class = "col-lg-12 text-center">
			<h1> Meet <%= @user.first_name %>! </h1>
		</div>
		<% end %>

		<div class = "col-lg-12 text-center">

			<%= image_tag("/assets/PROFILE.jpg", class: "img-responsive img-rounded center-block") %>


			<h3 class = "school">
				<%= @user.high_school %>, grade <%= @user.grade %>
			</h3>
		</div>

		<% if @user.tutor == true %>
		<p>Tutor</p>
		<% end %>



		<div class = "col-lg-12 text-center">
			<% if @user.id == current_user.id %>
			<%= link_to 'Edit profile', edit_user_registration_path(@user.id), class: 'btn btn-default btn-md edit-user-link' %>
			<% end %>
		</div>


	</div>

</div>